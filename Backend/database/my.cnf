[mysqld]
# Performance settings for development
innodb_buffer_pool_size = 128M
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
max_connections = 100

# Logging
log-error = /var/log/mysql/error.log
slow_query_log = 1
long_query_time = 2

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
